{
  "device": "cpu",
  "train_options": {
    "num_epoch": 3000,
    "display_epoch": 1,
    "use_reference": false
  },
  "optimizer_options": {
    "lr": 1e-1,
    "opt_type": "Adam"
  },
  "sch_options": {
    "sch_type": "Expo",
    "gamma": 0.998
  },
  "data_options": {
    "batch_size": 1,
    "sk_file_path": "../examples/slakos/",
    "bond_cutoff": 4,
    "env_cutoff": 3.5,
    "train_data_path": "../examples/TBmodel/hBN/data/",
    "train_data_prefix": "set",
    "test_data_path": "../examples/TBmodel/hBN/data/",
    "test_data_prefix": "set",
    "ref_data_path": "../examples/TBmodel/hBN/data/",
    "ref_data_prefix": "set",
    "proj_atom_neles": {
      "N": 5,
      "B": 3
    },
    "proj_atom_anglr_m": {
      "N": [
        "2s",
        "2p"
      ],
      "B": [
        "2s",
        "2p"
      ]
