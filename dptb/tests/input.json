  "sk_options":{
    "skformula":"varTang96",
    "sk_cutoff": 3.5,
    "sk_decay_w":0.5
  },
  "loss_options":{
    "emin": -25,
    "emax": 10,
    "band_min": 0,
    "band_max": 4,
    "ref_band_min": 0,
    "ref_band_max": 4
