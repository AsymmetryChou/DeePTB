{
  "common_options":{
  "device": "cpu",
  "dtype": "float32",
  "onsite_cutoff":3.0,
  "onsitemode":"strain",
  "bond_cutoff": 4.0,
  "env_cutoff": 3.5,
  "sk_file_path": "./examples/slakos/",
  "atomtype": ["N", "B"],
  "proj_atom_neles": {"N":5,"B":3},
  "proj_atom_anglr_m": {"N":["2s",  "2p"],"B":["2s","2p"]}
  },
  
  "train_options":{
    "num_epoch":1,
    "optimizer": {
      "lr": 1e-3,
      "type": "Adam"
    },
    "lr_scheduler": {
      "type": "Exp",
      "gamma": 0.999
    }
  },
  "data_options": {
    "use_reference":true,
    "train":{
      "batch_size": 1,
      "path": "./dptb/tests/data/hBN/data",
      "prefix": "set"
    }, 
    "validation":{
      "batch_size": 1,
      "path":"./dptb/tests/data/hBN/data",
      "prefix": "set"
    }, 
    "reference":{
      "batch_size": 1,
      "path": "./dptb/tests/data/hBN/data",
      "prefix": "set"
    }
  },
  "model_options": {
    "sknetwork":{
      "sk_hop_nhidden":50,
      "sk_onsite_nhidden":50,
      "sk_soc_nhidden":50
    },
    "skfunction":{
      "skformula":"varTang96",
      "sk_cutoff": 3.5,
      "sk_decay_w":0.5    
    },
    "dptb":{
      "axis_neuron": 10,
      "onsite_net_neuron": [2,4,8],
      "env_net_neuron": [3,6,12],
      "bond_net_neuron": [4,8,16],
      "onsite_net_activation": "tanh",
      "env_net_activation": "tanh",
      "bond_net_activation": "tanh",
      "onsite_net_type": "res",
      "env_net_type": "res",
      "bond_net_type": "res",
      "if_batch_normalized": false
    }
  },
  
  "loss_options":{
    "band_min":0,
    "band_max":6,
    "ref_band_min":0,
    "ref_band_max":4,
    "emin": -25,   
    "emax": 10,  
    "sigma":2, 
    "num_omega":3000, 
    "sortstrength":[0.01,0.01],
    "gap_penalty": false,
    "fermi_band":3,
    "loss_gap_eta":1e-2
  }
}

